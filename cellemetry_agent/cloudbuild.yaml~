steps:
  # Build the Docker image with HF token
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'build'
      - '--build-arg'
      - 'HF_TOKEN=${_HF_TOKEN}'
      - '-t'
      - 'us-central1-docker.pkg.dev/project-30380897-d50e-4cb6-b3d/cellemetry-repo/cellemetry-agent'
      - '.'
    secretEnv: ['HF_TOKEN']
    timeout: 1800s  # 30 minutes for large model download
    
  # Push to Artifact Registry
  - name: 'gcr.io/cloud-builders/docker'
    args: 
      - 'push'
      - 'us-central1-docker.pkg.dev/project-30380897-d50e-4cb6-b3d/cellemetry-repo/cellemetry-agent'

# Access the secret from Secret Manager
availableSecrets:
  secretManager:
    - versionName: projects/project-30380897-d50e-4cb6-b3d/secrets/hf-token/versions/latest
      env: 'HF_TOKEN'

# Allow manual override
substitutions:
  _HF_TOKEN: ''

# Specify the output image
images:
  - 'us-central1-docker.pkg.dev/project-30380897-d50e-4cb6-b3d/cellemetry-repo/cellemetry-agent'

options:
  machineType: 'E2_HIGHCPU_8'  # Use faster machine for build
  diskSizeGb: 100  # Increase disk for large model